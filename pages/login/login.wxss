/* pages/login/login.wxss */
.bg {
  position:fixed;
  top: 0;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  z-index: -1;
}
@media (min-width:1000px){
  .bg {
    width: 100%;
  }
}
.img {
  width:100%;
  height:100%;
  object-fit: cover;
}
.logo {
position: absolute;
width: 250px;
z-index: 10;
}
@media (min-width:1000px){
  .logo {
    width: 100px;
  }
}
.img1{
  width:100%;
  height: 140px; 
  object-fit: cover;
}
.container{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
  border-shadow: 1px 1px #0099CC;
}
.form{
  position:absolute;
  top: 200px;
}
@media (min-width:1000px) {
  .form{
    width: 100%;
  }
}
.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}
.row text{
  flex-grow: 1;
  text-align: right;
}
.row input{
  font-size: 0.7rem;
  width: 200px;
  color: black;
  flex-grow: 3;
  border: 1px solid #ccc;
  display: inline-block;
  border-radius: 0.3rem;
  padding: 0.3rem;
}
.row button{
  color: white;
  font-weight: bolder;
  background-color: rgb(103, 162, 260);
  padding: 0 2rem;
}